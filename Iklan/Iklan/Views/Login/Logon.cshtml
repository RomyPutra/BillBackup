@{
	ViewData["Title"] = "Login";
}
<div class="wrapper login-back fadeInDown">
	<div id="formLogin" class="row">
		<div class="col-md-6 col-sm-12 col-12" style="padding-left:0px;padding-right:0px;">
			<div class="left-side text-center h-100 my-auto">
				<h3>Selamat Datang</h3>
				<p>
					Masukan data diri dan perusahaan anda dan mulai pengalaman baru dalam beriklan
				</p>
				<button type="button" class="btn btn-light btn-lg">
					<a asp-area="" asp-controller="Login" asp-action="Register">Buat Akun</a>
				</button>
			</div>
		</div>
		<div class="col-md-6 col-sm-12 col-12" style="padding-left:0px;padding-right:0px;">
			<div class="right-side h-100 my-auto">
				<!-- Login Form -->
				@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
				{
				<div class="alert alert-danger" role="alert">
					@Html.ValidationSummary(true, "Terjadi kesalahan saat mengirim.")
				</div>
				}
				else if (Html.ViewData.ModelState.ContainsKey("Info"))
				{
				<div class="alert alert-info" role="alert">
					Email notification sended. Please check your email.
				</div>
				}
				<form method="post" action="Login">
					<div class="form-group">
						<input type="email" id="username" class="form-control w-100" name="username" placeholder="email" data-val="true" data-val-required="The user name is required" data-val-email="The format is wrong" value="">
						@*<input type="text" id="username" class="form-control w-100" name="username" placeholder="user name" data-val="true" data-val-required="The user name is required" data-val-email="The format is wrong" value="conetest@test.com">*@
						<span style="display:block;" class="field-validation-valid" data-valmsg-for="username" data-valmsg-replace="true"></span>
					</div>
					<div class="form-group">
						<input type="password" id="password" class="form-control w-100" name="password" placeholder="password" data-val="true" data-val-required="The password is required" value="">
						@*<input type="password" id="password" class="form-control w-100" name="password" placeholder="password" data-val="true" data-val-required="The password is required" value="conetest">*@
						<span style="display: block;" class="field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
					</div>
					<div class="forgot clearfix">
						<a asp-area="" asp-controller="Login" asp-action="Forgot" class="float-md-right">Lupa sandi?</a>
					</div>
					<div class="button text-center" style="padding-top:26%;">
						<button type="submit" onclick="loadScreen()" class="btn btn-primary btn-lg">Masuk</button>
					</div>
				</form>
				@*<div class="button text-center">
					<button type="submit" class="btn btn-primary btn-lg">Masuk</button>
				</div>*@
			</div>
		</div>
	</div>
</div>


