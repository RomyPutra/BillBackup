@model IEnumerable<Billboard360.Web.Models.ListUserOutputModel>
@{
	ViewData["Title"] = "Users Listing";
}
<div class="row">
	<div class="col-12">
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">Manage Users</h3>
				<p align="right">
					<a class="text-dark" style="padding: 5px;" asp-area="" asp-controller="Users" asp-action="Register"><img src="~/image/add-create.png" style="height: 15px;width: 15px;"/> Add SPV</a>
				</p>
			</div>
			<!-- /.box-header -->
			<div class="box-body auto-table">
				<table id="example1" class="table table-bordered table-striped" style="width:100%;">
					<thead>
						<tr>
							@*<th>UserId</th>*@
							<th>First Name</th>
							<th>Last Name</th>
							<th>User Name</th>
							<th>Company Name</th>
							<th>Role Name</th>
							<th>Is Active</th>
							<th>Address</th>
							<th>Company Phone</th>
							<th>Company Email</th>
							<th>Category</th>
							<th>NPWP</th>
							<th>Website</th>
							<th>Note</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							@*<td>@Html.DisplayFor(modelItem => item.UserID)</td>*@
							<td>@Html.DisplayFor(modelItem => item.FirstName)</td>
							<td>@Html.DisplayFor(modelItem => item.LastName)</td>
							<td>@Html.DisplayFor(modelItem => item.UserName)</td>
							<td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
							<td>@Html.DisplayFor(modelItem => item.RoleName)</td>
							<td>@Html.DisplayFor(modelItem => item.IsActive)</td>
							<td>@Html.DisplayFor(modelItem => item.Address)</td>
							<td>@Html.DisplayFor(modelItem => item.NoTelp)</td>
							<td>@Html.DisplayFor(modelItem => item.EmailPerusahaan)</td>
							<td>@Html.DisplayFor(modelItem => item.Kategory)</td>
							<td>@Html.DisplayFor(modelItem => item.NPWP)</td>
							<td>@Html.DisplayFor(modelItem => item.Website)</td>
							<td>@Html.DisplayFor(modelItem => item.Note)</td>
							@if (item.IsActive)
							{
								<td><a href="Users/Update/@item.UserID&@item.IsActive">Disable</a></td>
							}
							else
							{
								<td><a href="Users/Update/@item.UserID&@item.IsActive">Enable</a></td>
							}
						</tr>
						}
				</table>
			</div>
			<!-- /.box-body -->
		</div>
		<!-- /.box -->
	</div>
	<!-- /.col -->
</div>
