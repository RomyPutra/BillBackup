@{
    ViewData["Title"] = "Change Password";
}

<div class="wrapper fadeInDown">
	<div id="formContent" class="regis">
		<div style="text-align:right;">
			<button type="button" id="backLink" style="background:red;"><span aria-hidden="true">&times;</span></button>
		</div>
		<!-- Icon -->
		<div class="fadeIn first">
			<img src="~/image/user.png" id="icon" alt="User Icon" style="height: 75px;width: 75px;" />
		</div>

		<!-- Login Form -->
		@Html.ValidationMessage("Error")
		<form method="post" action="Change" style="padding-top:10px;">
			<input type="password" id="oldpassword" class="fadeIn first form-control" name="oldpassword" placeholder="Old Password">
			<input type="password" id="newpassword" class="fadeIn second form-control" name="newpassword" placeholder="New Password">
			<input type="password" id="renewpassword" class="fadeIn third form-control" name="renewpassword" placeholder="Re New Password">
			<input type="submit" class="fadeIn fourth" value="Submit Changes">
		</form>
	</div>
</div>


