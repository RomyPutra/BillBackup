@model IEnumerable<Billboard360.Web.Models.ListUserOutputModel>
@{
	ViewData["Title"] = "Data Pengguna";
}

<div class="card card-custom">
	<div class="card-header">
		<div class="card-title">
			<h3 class="card-label">Data Pengguna</h3>
		</div>
		<div class="card-toolbar">
			<!--begin::Button-->
			<a class="btn btn-primary font-weight-bolder" asp-area="" asp-controller="Users" asp-action="Register">
				<span class="svg-icon svg-icon-md">
					<!--begin::Svg Icon | path:/metronic/themes/metronic/theme/html/demo2/dist/assets/media/svg/icons/Design/Flatten.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
						<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
							<rect x="0" y="0" width="24" height="24" />
							<circle fill="#000000" cx="9" cy="15" r="6" />
							<path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
						</g>
					</svg><!--end::Svg Icon-->
				</span>	Tambah SPV
			</a>
			<!--end::Button-->
		</div>
	</div>		

	<div class="card-body">
		@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
		{
			<div class="alert alert-danger" role="alert">
				@Html.ValidationSummary(true, "Terjadi kesalahan saat mendapatkan data.")
			</div>
		}

		<!--begin: Datatable-->
		<table id="example1" class="table table-bordered table-hover table-checkable table-responsive">
			<thead>
				<tr>
					<th>Nama Depan</th>
					<th>Nama Belakang</th>
					<th>Email Pengguna</th>
					<th>Nama Perusahaan</th>
					<th>Nama Jabatan</th>
					@*<th>Aktif</th>*@
					<th>Alamat</th>
					<th>No. Telepon Perusahaan</th>
					<th>Email Perusahaan</th>
					<th>Kategory</th>
					<th>NPWP</th>
					<th>Website</th>
					<th>Deskripsi</th>
					<th>Aksi</th>
				</tr>
			</thead>
			<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.FirstName)</td>
					<td>@Html.DisplayFor(modelItem => item.LastName)</td>
					<td>@Html.DisplayFor(modelItem => item.UserName)</td>
					<td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
					<td>@Html.DisplayFor(modelItem => item.RoleName)</td>
					@*<td>@Html.DisplayFor(modelItem => item.IsActive)</td>*@
					<td>@Html.DisplayFor(modelItem => item.Address)</td>
					<td>@Html.DisplayFor(modelItem => item.NoTelp)</td>
					<td>@Html.DisplayFor(modelItem => item.EmailPerusahaan)</td>
					<td>@Html.DisplayFor(modelItem => item.Kategory)</td>
					<td>@Html.DisplayFor(modelItem => item.NPWP)</td>
					<td>@Html.DisplayFor(modelItem => item.Website)</td>
					<td>@Html.DisplayFor(modelItem => item.Note)</td>
					@if (item.IsActive)
					{
						<td><a class="btn btn-secondary btn-sm" href="Users/Update/@item.UserID&@item.IsActive">Disable</a></td>
					}
					else
					{
						<td><a class="btn btn-success btn-sm" href="Users/Update/@item.UserID&@item.IsActive">Enable</a></td>
					}
				</tr>
			}
			</tbody>
		</table>
		<!--end: Datatable-->
	</div>
</div>