@{
	ViewData["Title"] = "Login";
}

<!--begin::Login-->
<div class="login login-signin-on login-5 login-signin-on d-flex flex-row-fluid" id="kt_login">
	<div class="d-flex flex-column flex-lg-row flex-row-fluid text-center" style="background-image: url(../../../../../themes/metronic/theme/html/demo2/dist/assets/media/bg/bg-4.jpg);">
		<!--begin:Aside-->
		<div class="d-flex w-100 flex-center p-15" style="background-image: linear-gradient(to bottom, #f24e30, #fa5c8c 300%)">
			<div class="login-wrapper">
				<!--begin:Aside Content-->
				<div class="text-dark-75">
					<a href="#">
						<img src="../../../../../themes/metronic/theme/html/demo2/dist/assets/media/logos/logo-letter-13.png" class="max-h-75px" alt=""/>
					</a>
					<h3 class="mb-8 mt-22 font-weight-bold text-white" style="font-size:2.2rem;">Selamat Datang Media Owner</h3>
					<p class="mb-15 text-white font-weight-bold" style="font-size:1.1rem;">
						Masukan data diri dan perusahaan anda dan mulai pengalaman baru dalam beriklan
					</p>
					<a asp-area="" asp-controller="Login" asp-action="Register" class="btn btn-lg btn-transparent-white btn-pill py-4 px-9 font-weight-bold">Buat Akun</a>
				</div>
				<!--end:Aside Content-->
			</div>
		</div>
		<!--end:Aside-->

		<!--begin:Divider-->
		<div class="login-divider">
			<div></div>
		</div>
		<!--end:Divider-->

		<!--begin:Content-->
		<div class="d-flex w-100 flex-center p-15 position-relative overflow-hidden">
			<div class="login-wrapper">
				<!--begin:Sign In Form-->
				<div class="login-signin">
					<div class="text-center mb-10 mb-lg-20">
						<h2 class="font-weight-bold">Login</h2>
						<p class="text-muted font-weight-bold">Enter your email and password</p>
					</div>

					@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
					{
						<div class="alert alert-danger" role="alert">
							@Html.ValidationSummary(true, "Terjadi kesalahan saat mengirim.")
						</div>
					}
					else if (Html.ViewData.ModelState.ContainsKey("Info"))
					{
						<div class="alert alert-info" role="alert">
							Email notification sended. Please check your email.
						</div>
					}

					<form method="post" action="Login" class="form text-left" >
						<div class="form-group py-2 m-0">
							<input class="form-control h-auto placeholder-dark-75" type="email" id="username" name="username" placeholder="Email" data-val="true" data-val-required="The user name is required" data-val-email="The format is wrong" />
							<span style="display:block;" class="invalid-feedback" data-valmsg-for="username" data-valmsg-replace="true"></span>
						</div>
						<div class="form-group py-2 border-top m-0">
							<input class="form-control h-auto placeholder-dark-75" type="password" id="password" name="password" placeholder="Password" data-val="true" data-val-required="The password is required" />
							<span style="display:block;" class="invalid-feedback" data-valmsg-for="password" data-valmsg-replace="true"></span>
						</div>
						<div class="form-group d-flex flex-wrap justify-content-between align-items-center mt-5">
							<p></p>
							<a asp-area="" asp-controller="Login" asp-action="Forgot" class="text-muted text-hover-primary font-weight-bold">Lupa Password ?</a>
						</div>
						<div class="text-center mt-15">
							<button type="submit" onclick="loadScreen()" class="btn btn-lg btn-primary btn-pill shadow-sm py-4 px-9 font-weight-bold">Masuk</button>
						</div>
					</form>
				</div>
				<!--end:Sign In Form-->
			</div>
		</div>
		<!--end:Content-->
	</div>
</div>
<!--end::Login-->