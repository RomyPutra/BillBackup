@{
    ViewData["Title"] = "Tambah Provinsi";
}

<div class="col-md-6 offset-md-3">
	<div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<h3 class="card-label">Tambah Provinsi</h3>
			</div>
		</div>

		<form method="post" action="AddProvince">
			<div class="card-body">
				@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
				{
					<div class="alert alert-danger" role="alert">
						@Html.ValidationSummary(true, "Terjadi kesalahan saat mengirim.")
					</div>
				}

				<div class="form-group">
					<label>Kode Provinsi</label>
					<input type="text" class="form-control" id="kode" name="kode" placeholder="Kode Provinsi" data-val="true" data-val-required="The province code is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="kode" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Nama Provinsi</label>
					<input type="text" class="form-control" id="nama" name="nama" placeholder="Nama Provinsi" data-val="true" data-val-required="The province name is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="nama" data-valmsg-replace="true"></span>
				</div>
			</div>
			<div class="card-footer">
				<input type="submit" class="btn btn-primary mr-2" value="Simpan">
				<button type="button" id="backLink" class="btn btn-secondary">Batal</button>
			</div>
		</form>
	</div>
</div>

