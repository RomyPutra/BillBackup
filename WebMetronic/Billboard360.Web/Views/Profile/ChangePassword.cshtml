@{
    ViewData["Title"] = "Ganti Kata Sandi";
}

<div class="col-md-6 offset-md-3">
	<div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<h3 class="card-label">Ganti Kata Sandi</h3>
			</div>
		</div>

		<form method="post" action="Change">
			<div class="card-body">
				<div class="form-group">
					<label>Kata Sandi Lama</label>
					<input type="password" class="form-control" id="oldpassword" name="oldpassword"/>
				</div>

				<div class="form-group">
					<label>Kata Sandi Baru</label>
					<input type="password" class="form-control" id="newpassword" name="newpassword"/>
				</div>

				<div class="form-group">
					<label>Ketik Ulang Kata Sandi Baru</label>
					<input type="password" class="form-control" id="renewpassword" name="renewpassword"/>
				</div>
			</div>
			<div class="card-footer">
				<input type="submit" class="btn btn-primary mr-2" value="Simpan Perubahan">
			</div>
		</form>
	</div>
</div>



