@model Billboard360.Web.Models.EditSite
@{
    ViewData["Title"] = "Perbarui Site";
}


<div class="col-md-6 offset-md-3">
	<div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<h3 class="card-label">Perbarui Site</h3>
			</div>
		</div>

		<form method="post" action="~/Site/UpdateSite">
			<div class="card-body">
				@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
				{
					<div class="alert alert-danger" role="alert">
						@Html.ValidationSummary(true, "Terjadi kesalahan saat memperbarui.")
					</div>
				}

				<input type="hidden" asp-for="input.SiteID" value="@Model.val.Detail.SiteID">
				<input type="hidden" id="selectedProv" value="@Model.val.Detail.Provinsi">
				<input type="hidden" id="selectedCity" value="@Model.val.Detail.Kota">
				<input type="hidden" id="typeIDHidden" value="@Model.val.Detail.Tipe">

				<div class="form-group">
					<label>Billboard No</label>
					<input type="text" class="form-control" asp-for="input.NoBillboard" value="@Model.val.Detail.NoBillboard" data-val="true" data-val-required="The billboard number is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.NoBillboard" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Alamat</label>
					<input type="text" class="form-control" asp-for="input.Address" value="@Model.val.Detail.Alamat" data-val="true" data-val-required="The Address field is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.Address" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Pulau</label>
					<input type="text" class="form-control" asp-for="input.Pulau" value="@Model.val.Detail.Pulau" data-val="true" data-val-required="The pulau field is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.Pulau" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Provinsi</label>
					<select id="lstprovince" class="form-control" data-val="true" data-val-required="The Province field is required." asp-for="input.Provinsi"></select>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.Provinsi" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Kota</label>
					<select id="lstcity" class="form-control" data-val="true" data-val-required="The City field is required." asp-for="input.Kota"></select>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.Kota" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Cabang</label>
					<input type="text" class="form-control" asp-for="input.Cabang" value="@Model.val.Detail.Cabang" data-val="true" data-val-required="The branch is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="input.Cabang" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Horizontal / Vertical</label>
					<input type="text" class="form-control" asp-for="input.HorV" value="@Model.val.Detail.HorV" data-val="true" data-val-required="The horv is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="input.HorV" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Tipe</label>
					<select id="lsttype" class="form-control" data-val="true" data-val-required="The Type field is required." asp-for="input.Tipe"></select>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="Detail.Tipe" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Longitude</label>
					<input type="text" class="form-control" asp-for="input.Longitude" value="@Model.val.Detail.Longitude" data-val="true" data-val-required="The longitude is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="input.Longitude" data-valmsg-replace="true"></span>
				</div>

				<div class="form-group">
					<label>Latitude</label>
					<input type="text" class="form-control" asp-for="input.Latitude" value="@Model.val.Detail.Latitude" data-val="true" data-val-required="The latitude is required"/>
					<span style="display:block;" class="invalid-feedback" data-valmsg-for="input.Latitude" data-valmsg-replace="true"></span>
				</div>
			</div>
			<div class="card-footer">
				<input type="submit" class="btn btn-primary mr-2" value="Simpan">
				<button type="button" id="backLink" class="btn btn-secondary">Batal</button>
			</div>
		</form>
	</div>
</div>

<script>
	var siteEdit = @Html.Raw(Json.Serialize(Model));
</script>

