@{
	ViewData["Title"] = "Tambah Gambar";
}

<div class="card card-custom">
	<div class="card-header">
		<div class="card-title">
			<h3 class="card-label">Tambah Gambar</h3>
		</div>
		<div class="card-toolbar">
			<a class="btn btn-secondary font-weight-bolder" id="backLink">
				<span class="svg-icon svg-icon-md">
					<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
						<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
							<polygon points="0 0 24 0 24 24 0 24"/>
							<path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.000003, 11.999999) scale(-1, 1) rotate(-270.000000) translate(-12.000003, -11.999999) "/>
						</g>
					</svg>
				</span>	Kembali
			</a>
		</div>
	</div>		

	<div class="card-body">
		@if (Html.ViewData.ModelState.ContainsKey(string.Empty))
		{
			<div class="alert alert-danger" role="alert">
				@Html.ValidationSummary(true, "Terjadi kesalahan saat mengirim.")
			</div>
		}

		<p> Maksimal 4 file sekali upload </p>
		<div class="jumbotron">
			<form action="AddImage" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneJsForm">
				<div class="fallback">
					<input name="file" type="file" multiple />
					<input type="submit" value="Submit All Files" />
				</div>
			</form>
		</div>
	</div>
</div>

